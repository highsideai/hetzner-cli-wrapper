# Hetzner Cloud Configuration
# Copy this file to .env and fill in your values

# Required: Hetzner Cloud API Token
HETZNER_TOKEN=your_hetzner_api_token_here

# Optional: Default SSH Key (can be overridden via command line)
DEFAULT_SSH_KEY_NAME=my-ssh-key

# Optional: Default Server Configuration
DEFAULT_SERVER_TYPE=cx11
DEFAULT_IMAGE=ubuntu-22.04
DEFAULT_LOCATION=ash

# Optional: Default Network Configuration
DEFAULT_NETWORK_NAME=
DEFAULT_FIREWALL_NAME=

# Optional: Default Volume Configuration
DEFAULT_VOLUME_SIZE=10
DEFAULT_VOLUME_TYPE=local

# Optional: Default Tags (comma-separated)
# Format: key:value,key:value (will be converted to key=value for hcloud)
DEFAULT_TAGS=environment:dev,managed-by:script

# Optional: Default Cloud-Init Configuration File
# Examples:
# DEFAULT_CLOUD_CONFIG_FILE=cloud-init-examples/basic-setup.yaml
# DEFAULT_CLOUD_CONFIG_FILE=cloud-init-examples/docker-setup.yaml
# DEFAULT_CLOUD_CONFIG_FILE=cloud-init-examples/web-server.yaml
# DEFAULT_CLOUD_CONFIG_FILE=/path/to/your/custom-config.yaml
DEFAULT_CLOUD_CONFIG_FILE=
